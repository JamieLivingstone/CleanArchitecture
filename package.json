{
  "name": "clean-architecture",
  "description": "A Node template that follows the Clean Architecture principles and encourages established practices.",
  "author": "Jamie Livingstone",
  "license": "MIT",
  "scripts": {
    "build": "tsc --project tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "lint": "tsc --noEmit && eslint .",
    "start": "tsnd --respawn --exit-child -r dotenv/config -r tsconfig-paths/register src/web/api/server.ts",
    "test": "jest",
    "test:unit": "jest --selectProjects unit-tests",
    "test:functional": "jest --selectProjects functional-tests",
    "prepare": "husky install"
  },
  "dependencies": {
    "@prisma/client": "^5.9.1",
    "awilix": "^8.0.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "pino": "^8.18.0",
    "swagger-ui-express": "^5.0.0",
    "yup": "^1.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "18.0.0",
    "@commitlint/config-conventional": "18.0.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/pg": "^8.11.0",
    "@types/supertest": "^2.0.16",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "dotenv": "^16.4.3",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "lint-staged": "^14.0.1",
    "pg": "^8.11.3",
    "prettier": "^3.2.5",
    "prisma": "^5.9.1",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^4.9.5"
  }
}
